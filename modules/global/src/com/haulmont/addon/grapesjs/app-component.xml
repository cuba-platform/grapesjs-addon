<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<app-component xmlns="http://schemas.haulmont.com/cuba/app-component.xsd"
               dependsOn="com.haulmont.cuba">

    <module name="global" blocks="*">
        <artifact name="grapesjs-global" appJar="true"/>

        <property name="cuba.persistenceConfig" value="+com/haulmont/addon/grapesjs/persistence.xml"/>
        <property name="cuba.metadataConfig" value="+com/haulmont/addon/grapesjs/metadata.xml"/>
        <property name="cuba.viewsConfig" value="+com/haulmont/addon/grapesjs/views.xml"/>
    </module>
    <module name="core" dependsOn="global" blocks="core">
        <artifact name="grapesjs-core" appJar="true"/>
        <artifact name="grapesjs-core" classifier="db" ext="zip" configuration="dbscripts"/>

        <property name="cuba.springContextConfig" value="+com/haulmont/addon/grapesjs/spring.xml"/>
        <property name="cuba.mainMessagePack" value="+com.haulmont.addon.grapesjs.core"/>
    </module>
    <module name="web" dependsOn="global" blocks="web">
        <artifact name="grapesjs-web" appJar="true"/>
        <artifact name="grapesjs-web" classifier="web" ext="zip" configuration="webcontent"/>
        <artifact name="grapesjs-web" ext="jar" configuration="themes"/>

        <property name="cuba.springContextConfig" value="+com/haulmont/addon/grapesjs/web-spring.xml"/>
        <property name="cuba.dispatcherSpringContextConfig"
                  value="+com/haulmont/addon/grapesjs/web-dispatcher-spring.xml"/>
        <property name="cuba.windowConfig" value="+com/haulmont/addon/grapesjs/web-screens.xml"/>
        <property name="cuba.menuConfig" value="+com/haulmont/addon/grapesjs/web-menu.xml"/>
        <property name="cuba.permissionConfig" value="+com/haulmont/addon/grapesjs/web-permissions.xml"/>
        <property name="cuba.mainMessagePack" value="+com.haulmont.addon.grapesjs.web"/>
    </module>
</app-component>